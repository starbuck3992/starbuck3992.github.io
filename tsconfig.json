{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "noImplicitAny": false,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "src/*",
    "types/*"
  ]
}
